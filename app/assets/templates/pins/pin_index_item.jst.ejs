<div class="pin-wrapper">
  <button class="edit-pin">Edit</button>
  <button class="pin-it">Pin</button>
  <div class="pin-image">
    <img src="<%= pin.escape("image_url") %>" alt="" />
  </div>
  <div class="pin-title">
    <%= pin.escape("description") %>
  </div>
  <% if (board) { %>
  <div class="pin-pins">
    <p>
      Pinned to: <%= board.escape("title") %>
    </p>
  </div>
  <% } %>
<div class="overlay-light"></div>
</div>
