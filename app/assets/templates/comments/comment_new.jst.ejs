<div class="comment-container group">
  <div class="commenter-avatar">
    <img src="<%= Simterest.currentUser.escape("avatar_url") %> " alt="" />
  </div>
  <div class="comment-info">
    <h2><%= Simterest.currentUser.escape("username") %></h2>
    <form class="comment" method="post">
      <textarea class="comment-body" name="comment[body]"
                rows="8" cols="40" placeholder="Add a comment..."></textarea>
      <button class="comment">Comment</button>
    </form>
  </div>
</div>
