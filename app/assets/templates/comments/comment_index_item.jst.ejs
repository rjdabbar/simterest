<div class="comment-container group">
  <div class="commenter-avatar">
    <img src="<%= commenter.escape("avatar_url") %>" alt="" />
  </div>
  <div class="comment-info">
    <a href="#<%= commenter.id %>"><h2><%= commenter.escape("username") %></h2></a>
    <div class="comment-display">
        <p>
          <%= comment.escape("body") %>
        </p>
      <% if (commenter.id === Simterest.currentUser.id) { %>
        <button class="delete-comment">X</button>
      <% } %>
    </div>
  </div>
</div>
