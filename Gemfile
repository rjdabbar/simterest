source 'https://rubygems.org'


# rails
gem 'rails', '4.2.3'
# pg for db
gem 'pg'

# default styling things
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
# bcrypt for auth
gem 'bcrypt'
# js magic
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'backbone-on-rails'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# file uploading gems
gem 'paperclip'
gem 'aws-sdk'
gem 'figaro'

group :development do
  gem 'pry-rails'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'guard-livereload'
  gem 'annotate'
end

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :production do
  gem 'rails_12factor'
end
